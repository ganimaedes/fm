{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "type":    "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/main",
        "args": ["/"],
        "cwd": "${workspaceRoot}",
        "environment": [
          { "name": "VIMRUNTIME", "value": "${workspaceRoot}" }
        ],
        "externalConsole": true,
        "stopAtEntry": false,
        "MIMode": "gdb",
        "miDebuggerServerAddress": "localhost:1234",
        "logging": {
          "engineLogging": false
        }
      }
    }
  }
}
